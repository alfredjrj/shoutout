
 
<div class="form-group" >
            
          <%= form_for(@venture)  do |f| %>
                      
                <%= f.text_area :title , :class => 'form-control' , :placeholder=>"title" %>
                <%= f.text_area :goal , :class => 'form-control' , :placeholder=>"goal" %>
                <%= f.text_area :tags , :class => 'form-control' , :placeholder=>"tags" %>
                <%= f.file_field :image  , :class => 'form-control' %>
                <%= f.submit "save", :class => 'btn btn-primary btn-md' %>
          
          <% end %>
 </div> 
 
