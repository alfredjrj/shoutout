<%= render "posts/form" %>



<% @venture.posts.each  do |post| %>

<div style=" background-color: white;
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);" >

 <div class=" img-thumbnail image"><%= link_to image_tag(@venture.image.url(:med)) %></div> 
<%=  post.text %>
<%= link_to image_tag(post.image.url(:large)) %><br>
<%=  post.tags %>
